<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CubHubApp.Pages.SignUpPage"
             Title="SignUpPage">
    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="15">
            <Label Text="Sign Up" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>

            <Label Text="Create a new account" FontSize="16" HorizontalOptions="Center" Margin="0,0,0,20"/>

            <Entry Placeholder="Name" Text="{Binding Name}"/>
            <Entry Placeholder="Email" Text="{Binding Email}" Keyboard="Email"/>
            <Picker Title="Select Board Type" ItemsSource="{Binding BoardTypes}" SelectedItem="{Binding SelectedBoardType}"/>
            <Picker Title="Select Grade" ItemsSource="{Binding Grades}" SelectedItem="SelectedGrade"/>

            <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="True"/>

            <Entry Placeholder="Confirm Password" Text="{Binding ConfirmPassword}" IsPassword="True"/>

            <!-- SignUp Button -->

            <Button Text="Sign Up" Command="{Binding SignUpCommand}" BackgroundColor="#512BD4" TextColor="White" CornerRadius="8" HeightRequest="50"/>

            <!-- Login Redirect -->
            <Label HorizontalOptions="Center" Margin="0,20,0,0">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Already have an account ? "> 

                        </Span>
                        <Span Text="Login" TextColor="#512BD4" FontAttributes="Bold">
                            <Span.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding LoginCommand}"/>
                            </Span.GestureRecognizers>
                        </Span>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </VerticalStackLayout>
    </ScrollView>
   
</ContentPage>